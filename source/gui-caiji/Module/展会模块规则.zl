fun myCheckContentLinkExists()
	global tablename,content_links,contentIndex,catid;
	if(bltSqlTableExists(tablename))
		sql = "SELECT * FROM "+tablename+" WHERE linkurl='"+bltSqlEscape(content_links[contentIndex])+"' AND catid='"+catid+"'";
		if(!bltSqlQuery(sql))
			bltExit('查询'+sql+'失败');
		elif(bltSqlMoveToNext())
			print bltSqlGetString('linkurl') + '["' + bltSqlGetString('title') + ']"采集地址已经存在！';
			bltSqlRelease();
			return TRUE;
		endif
		bltSqlRelease();
		return FALSE;
	else
		bltSqlExec('CREATE TABLE '+tablename+' (id INTEGER PRIMARY KEY ASC,catid,title,content,state,linkurl,level,fromtime,totime,areaid,city,address,hallname,remark,thumb,sponsor,undertaker,homepage,truename,telephone,mobile,addr,postcode,fax,email,status,hits,addtime)');
		print '创建'+tablename+'数据库表！';
		return FALSE;
	endif
endfun

fun myCheckIsNeedSuffix() //判断是否需要后缀
	global catid,catname;
	sql = "SELECT * FROM keywords WHERE catid='"+catid+"'";
	if(!bltSqlQuery(sql))
		bltExit('查询'+sql+'失败');
	endif
	if(bltSqlMoveToNext())
		ret = bltConvToInt(bltSqlGetString('needSuffix'));
	else
		bltExit('myCheckIsNeedSuffix运行时错误: 在数据库的keywords表中没有找到分类('+catname+') 对应catid为'+catid);
	endif
	bltSqlRelease();
	return ret;
	//bltInfoBox('结果：'+ printStr);
endfun

fun myInsertToDb()
	global tablename,catname,catid,title,exhibit_content,content_links,contentIndex,caiji_totalcount,
		   start_time,end_time,exhibit_areaid,exhibit_city,exhibit_position,exhibit_name,exhibit_sponsor,exhibit_undertaker,exhibit_website,exhibit_truename,
		   exhibit_telephone,exhibit_mobile,exhibit_postcode,exhibit_fax,exhibit_email;
	sql = "INSERT INTO "+ tablename +
			" (catid,title,content,state,linkurl,level,fromtime,totime,areaid,city,address,hallname,remark,thumb,sponsor,undertaker,homepage,truename,telephone,mobile,addr,postcode,fax,email,status,hits,addtime) VALUES ('" + 
			catid + "','" +
			bltSqlEscape(title) + "','" +
			bltSqlEscape(exhibit_content) + "','0','" +
			bltSqlEscape(content_links[contentIndex]) + "','" +
			"1" + "','" +
			bltSqlEscape(start_time) + "','" +
			bltSqlEscape(end_time) + "','" +
			bltSqlEscape(exhibit_areaid) + "','" +
			bltSqlEscape(exhibit_city) + "','" +
			bltSqlEscape(exhibit_position) + "','" +
			bltSqlEscape(exhibit_name) + "','" +
			"" + "','" +
			"" + "','" +
			bltSqlEscape(exhibit_sponsor) + "','" +
			bltSqlEscape(exhibit_undertaker) + "','" +
			bltSqlEscape(exhibit_website) + "','" +
			bltSqlEscape(exhibit_truename) + "','" +
			bltSqlEscape(exhibit_telephone) + "','" +
			bltSqlEscape(exhibit_mobile) + "','" +
			"" + "','" +
			bltSqlEscape(exhibit_postcode) + "','" +
			bltSqlEscape(exhibit_fax) + "','" +
			bltSqlEscape(exhibit_email) + "','" +
			"3" + "','" +
			bltIntToStr(bltRandom()%1000 + 200,0,'0') + "','" +
			bltGetTimeNow('%Y-%m-%d %H:%M:%S') + "')";
	//bltInfoBox(sql);
	if(!bltSqlExec(sql))
		bltExit('执行'+sql+'失败');
	endif
	caiji_totalcount++;
	bltAddProgress(1);
	printf('采集(' + title + ')到本地数据库的['+catname+']分类中\n',GREEN);
endfun

fun myInsertToDb_whenError(errorStr,extraInfo)
	global tablename,catid,content_links,contentIndex;
	extraInfo += ''; //当extraInfo没提供参数时，为默认的整数0，此时需要转为字符串格式，和字符串相加就可以转为字符串。
	if(bltCheckAutoPass() || extraInfo == 'titleExists')
		errorStr = '系统自动过滤:' + errorStr;
		sql = "INSERT INTO "+ tablename +
			" (catid,title,content,state,linkurl,level,fromtime,totime,areaid,city,address,hallname,remark,thumb,sponsor,undertaker,homepage,truename,telephone,mobile,addr,postcode,fax,email,status,hits,addtime) VALUES ('" + 
			catid + "','" +
			bltSqlEscape(errorStr) + "','','1','" +
			bltSqlEscape(content_links[contentIndex]) + "','" +
			"1" + "','','','','','','','','','','','','','','','','','','','3','','')";
		if(!bltSqlExec(sql))
			bltExit('执行'+sql+'失败');
		endif
	endif
	if(extraInfo == 'titleExists')
		printf(errorStr,NORMAL);
	else
		printf(errorStr,RED);
	endif
endfun

fun myPostDataToWeb()
	global tablename,catid,modid,caiji_url,catname,totalpostNum,caiji_postfileName,maxCaijiImgs_Num;
	totalRowCount = myGetTotalNum();
	if(totalRowCount <= 0)
		printf('本地数据库的采集量为0，目前['+catname+"]分类没采集到数据！跳过不继续发布！\n",RED);
		return;
	endif
	if(bltGetMenuCheck("倒序发布"))
		sql = "SELECT * FROM "+tablename+" WHERE catid='" + catid + "' AND state='0' order by id desc";
	else
		sql = "SELECT * FROM "+tablename+" WHERE catid='" + catid + "' AND state='0'";
	endif
	//sql = "SELECT * FROM "+tablename+" WHERE catid='" + catid + "' AND state='0'";
	if(!bltSqlQuery(sql))
		bltExit('查询'+sql+'失败');
	endif
	url = "http://" + caiji_url + "/"+caiji_postfileName;
	forward = "http://"+ caiji_url +"/"+caiji_postfileName+"/action/left";
	RowCount = 0;
	for(;bltSqlMoveToNext();bltAddProgressEx(RowCount,totalRowCount))
		RowCount++;
		//bltAddProgressEx(RowCount,totalRowCount);
		title = bltSqlGetString('title');
		if(myDetectTitle(title) == 'Y')
			print title + '已经采集过了跳过！';
			sql = "UPDATE "+tablename+" SET state='1' WHERE id='"+bltSqlGetString('id')+"'";
			if(!bltSqlExec(sql))
				bltExit('执行'+sql+'失败');
			endif
			continue;
		endif
		maxCaijiImgs_Num = bltGetMaxUploadIMG(); //获取最多采集多少张图片
		if(bltGetMenuCheck("发布到待审核"))
			status = '2';
		else
			status = '3';
		endif
		printf('发布中...',GREEN);
		thumb = IMG.Post(bltSqlGetString('thumb'));
		content = IMG.PostAll(bltSqlGetString('content'));
		if(bltGetMenuCheck("图片下载到本地再上传"))
			remote = '';
		else
			remote = thumb;
		endif
		ret = bltPostData(url,array('moduleid',bltIntToStr(modid,0,'0'),
							'file','index',
							'action','add',
							'itemid',"0",
							'forward',forward,
							"post[title]",title,
							"post[level]",bltSqlGetString('level'),
							"post[catid]",bltIntToStr(catid,0,'0'),
							"post[fromtime]",bltSqlGetString('fromtime'),
							"post[totime]",bltSqlGetString('totime'),
							"post[areaid]",bltSqlGetString('areaid'),
							"post[city]",bltSqlGetString('city'),
							"post[address]",bltSqlGetString('address'),
							"post[hallname]",bltSqlGetString('hallname'),
							"post[content]",content,
							"post[remark]",bltSqlGetString('remark'),
							"post[thumb]",thumb,
							"remote",remote,
							"post[sponsor]",bltSqlGetString('sponsor'),
							"post[undertaker]",bltSqlGetString('undertaker'),
							"post[homepage]",bltSqlGetString('homepage'),
							"post[truename]",bltSqlGetString('truename'),
							"post[telephone]",bltSqlGetString('telephone'),
							"post[mobile]",bltSqlGetString('mobile'),
							"post[addr]",bltSqlGetString('addr'),
							"post[postcode]",bltSqlGetString('postcode'),
							"post[fax]",bltSqlGetString('fax'),
							"post[email]",bltSqlGetString('email'),
							"post[status]",status,
							"post[hits]",bltSqlGetString('hits'),
							//"post[addtime]",bltSqlGetString('addtime'),
							"post[addtime]",bltGetTimeNow('%Y-%m-%d %H:%M:%S'),
							'post[clear_link]','1',
							"post[save_remotepic]","1",
							"post[maxcaiji_num]",maxCaijiImgs_Num,
							"submit","确定"
							),&output);
							/*),&output,"ZDEDebuggerPresent=php,phtml,php3;PHPSESSID=5593e83de0f9e0b6510f56283d3f1610;debug_host=192.168.1.102,192.168.56.1,127.0.0.1; debug_fastfile=1; debug_port=10137; start_debug=1; send_debug_header=1; send_sess_end=1; debug_jit=1; original_url=http://www.destoongbk5.qq/zenglangel_login.php; debug_stop=1; use_remote=1; debug_session_id=101142605; debug_start_session=1"); //添加调试cookie，触发zend studio进行调试分析*/
		//bltInfoBox(output); //调试
		//bltExit("调试..."); //调试
		if(ret > 0)
			if(bltRegexMatchFirst('<div class="head">.*?<div.*?>(提示信息)</',1,output,&match,1) < 0)
				printf('【'+ title + '】发布成功！\n',GREEN);
				sql = "UPDATE "+tablename+" SET state='1' WHERE id='"+bltSqlGetString('id')+"'";
				if(!bltSqlExec(sql))
					bltExit('执行'+sql+'失败');
				endif
				totalpostNum++;
			else
				if(bltRegexMatchFirst('<div class="content">\\s*?(.*?)\\s*?<div',1,output,&match,1) >= 0)
					printf('【'+ title + '】发布失败！原因：' + match + '\n',RED);
				else
					printf('【'+ title + '】发布失败！原因未知，请在对应模块脚本中使用print或printf或bltInfoBox等进行调试分析\n' ,RED);
				endif
			endif
		else
			printf('【'+ title + '】发布未知！\n',RED);
		endif
		//break;
	endfor
	bltSqlRelease();
endfun

fun myDetectTitle(title)
	global tablename,caiji_url,modid,catid;
	detectUrl = "http://"+ caiji_url +"/mydetectTitle.php";
	bltPostData(detectUrl,array(
					"_zlmy_detectTable",tablename,
					"_zlmy_detectTitle",title,
					"_zlmy_catid",bltIntToStr(catid,0,'0')
					),&output);
	return output;
endfun

fun myGetTotalNum()
	global tablename,catid;
	sql = "SELECT count(*) as MyTotalCnt FROM "+tablename+" WHERE catid='" + catid + "' AND state='0'";
	if(!bltSqlQuery(sql))
		bltExit('查询'+sql+'失败');
	endif
	if(bltSqlMoveToNext())
		return bltConvToInt(bltSqlGetString('MyTotalCnt'));
	else
		return 0;
	endif
endfun