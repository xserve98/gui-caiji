					' exhibit_mobile'+exhibit_mobile + ' exhibit_postcode:'+exhibit_postcode + ' exhibit_fax:' + exhibit_fax + ' exhibit_email:' + exhibit_email;*/ //debug 调试
				
				myInsertToDb();
				//break;
			endfor
			//break;
		endfor
		//break;
	endfor
elif(keywords_count == 0)
	printf('分类的关键词为空\n',RED);
else
